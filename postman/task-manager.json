            ],
            "url": {
              "raw": "{{baseUrl}}/tasks/1",
              "host": ["{{baseUrl}}"],
              "path": ["tasks", "1"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Learn NestJS Deeply\"\n}"
            }
          }
        },
        {
          "name": "Delete Task (ADMIN only)",
          "request": {
